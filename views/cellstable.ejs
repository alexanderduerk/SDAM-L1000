<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>L1000</title>
  <link rel="stylesheet" href="/css/tablestyles.css" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <script>
  function adjustOffset(amount) {
    // Log the action to confirm the function is being called
    console.log(`Adjusting offset by ${amount}`);

    // Get the current offset value
    const offsetInput = document.getElementById('offset');
    let offset = parseInt(offsetInput.value, 10) || 0;
    const limitInput = document.getElementById('limit');
    let limit = parseInt(limitInput.value, 10) || 25;

    // Adjust the offset value
    offset += amount * limit;

    // Update the hidden input with the new offset value
    offsetInput.value = offset;

    // Log the new offset value
    console.log(`New offset value: ${offset}`);
  }
  // Function for column limit change
  function changeLimit(newlimit) {
    const documentlimit = document.getElementById("limitInput");
    let limit = parseInt(newlimit, 10) || 25;
    documentlimit.value = limit
  }
// Funnction for Changing individual column order
  function changeOrder(order, column) {
    console.log(column)
    const documentorderfield = document.getElementById("orderinput")
    documentorderfield.value = String(column)
    const documentorder = document.getElementById("order")
    documentorder.value = String(order)
  }
  </script>
  <nav class="navbar">
    <div class="container">
      <a href="/" class="logo">L1000</a>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
      <div class="menu-toggle">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </div>
    </div>
  </nav>

  <main>
    <% if (data && data.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Cell Name</th>
            <th>Donor age</th>
            <th>Growth media</th>
            <th>Doubling time</th>
            <th>Donor ethnicity</th>
            <th>Donor sex</th>
            <th>Donor tumor phase</th>
            <th>Primary disease</th>
            <th>Growth pattern</th>
          </tr>
        </thead>
        <tbody>
          <% for (const row of data) { %>
            <tr>
              <% for (const value of Object.values(row)) { %>
                <td><%= value %></td>
              <% } %>
            </tr>
          <% } %>
        </tbody>
      </table>
    <% } else { %>
      <p>No data available</p>
    <% } %>
    <!--overhanding searchArg-->
    <form
    action="/cells/search"
    method="post"
    enctype="application/x-www-form-urlencoded"
  ><!--Hidden input fields for searchArg values-->
    <input type="hidden" name="val" value="<%= currentSearchArg.val %>" />
    <input type="hidden" name="field" value="<%= currentSearchArg.field %>" />
    <input type="hidden" name="op" value="<%= currentSearchArg.op %>" />
    <input type="hidden" id="limit" name="limit" value="<%= currentSearchArg.limit %>" />
    <input type="hidden" id="offset" name="offset" value="<%= currentSearchArg.offset %>" />
    <input type="hidden" name="order" value="<%= currentSearchArg.order %>" /><!--Button functionality-->
    <input type="hidden" id="orderinput" name="orderfield" value="<%= currentSearchArg.orderfield %>">
    <button type="submit" onclick="adjustOffset(-1)">Prev.</button>
    <button type="submit" onclick="adjustOffset(1)">Next.</button>
  </form>
  <!-- Hidden input fields & buttons for limit change-->
  <form
    action="/cells/search"
    method="post"
    enctype="application/x-www-form-urlencoded"
  >
    <label for="limitInput">Limit:</label>
    <input type="hidden" name="val" value="<%= currentSearchArg.val %>" />
    <input type="hidden" name="field" value="<%= currentSearchArg.field %>" />
    <input type="hidden" name="op" value="<%= currentSearchArg.op %>" />
    <input type="hidden" id="offset" name="offset" value="<%= currentSearchArg.offset %>" />
    <input type="hidden" name="order"  id="order" value="<%= currentSearchArg.order %>" />
    <input type="hidden" name="orderfield" id="orderinput" value="<%= currentSearchArg.orderfield %>">
    <input type="hidden" id="limitInput" name="limit" value="<%= currentSearchArg.limit %>">
    <button type="submit" onclick="changeLimit(50)">50
    </button>
    <button type="submit" onclick="changeLimit(100)">100
    </button>
    <button type="submit" onclick="changeLimit(150)">150
    </button>
  </form>
  </main>
</body>
</html>
